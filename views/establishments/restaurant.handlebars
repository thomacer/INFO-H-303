<!DOCTYPE html>
<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->

        {{#with establishment }}
        <!-- Title -->
        <h1>{{name}}</h1>

        <div class="creator-section">
            by <a href="/user/{{created_by}}">{{created_by}}</a> ({{creation_date}})
        </div>

        <hr>


        {{#if image}}
            <img class="img-responsive" data-action="zoom" src="{{image}}" alt="">
            <hr>
        {{/if}}


        {{> map}}

        {{> establishment_info}}

        <hr>

        <!-- Blog Comments -->

        <!-- Comments Form -->
        {{/with}}

        <!-- Posted Comments -->

        {{> comments}}

    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Blog Categories Well -->
        <div class="well">
            <h4>{{establishment.name}} labels</h4>

            <hr>

            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-unstyled">
                        {{#each labels}}
                            <li><a href="/label/{{label_name}}">{{label_name}}</a> </li>
                        {{/each }}
                    </ul>
                </div>

                <form role="form">
                    <div class="input-group">
                        <textarea class="form-control" name="title" rows="1" placeholder="Add a label"></textarea>
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Add.</button>
                        </span>
                    </div>
                </form>

            </div>
            <!-- /.row -->
        </div>

