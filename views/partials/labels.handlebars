<!DOCTYPE html>

<div class="well">
    <h4>{{establishment.name}} labels</h4>

    <hr>

    <div class="row">
        <div class="col-lg-12">
            <ul class="list-unstyled">
                {{#each labels}}
                    <li><a href="/label/{{name}}">{{name}}</a>
                    {{#if ../user.admin}}
                    <a href="/label/remove/{{id}}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    {{/if}}
                    </li>
                {{/each }}
            </ul>
        </div>

        {{#if user}}
        <form id="selectizeForm" action="/label/?id={{establishment.id}}" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-6 labelContainer">
                    <select id="selectLabel" name="label" placeholder="Choisir un label..">
                        {{#each labels}}
                        <option name="title" value="{{name}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>

        <script type="text/javascript">
            $(document).ready(function() {
                //initialize selectize for both fields
                $("#selectLabel").selectize({
                    delimiter: ',',
                    persist: false,
                    create: function(input) {
                        return {
                            value: input,
                            text: input
                        }
                    }
                });
            });
        </script>

        {{/if}}

    </div>
</div>
