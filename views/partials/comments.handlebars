<!DOCTYPE html>

{{#if user}}
<div class="well">
    <h4>Leave a Comment:</h4>
    <form action="/comment/?id={{establishment.id}}" role="form" method="POST">
        <div class="form-group">
            <textarea class="form-control" name="comment" rows="3" placeholder="Comment"></textarea>
        </div>
        <div class="row">
            <div class="col-md-6">
                <input name="rating" type="text" class="rating" data-size="xs" >
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary pull-right">Envoyer</button>
            </div>
        </div>
    </form>
</div>

<hr>
{{/if}}

<!-- Comment -->
{{#each comments}}
<div class="well">
    <div class="row">
        {{#if image_attached}}
        <div class="col-md-3">
            <a class="pull-left" href="#">
                <img class="media-object" src="{{image_attached}}" alt="">
            </a>
        </div>
        {{/if}}

        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6 pull-left">
                    {{username}}
                    </br>
                    {{timestamp}}
                </div>
                <div class="col-md-6 pull-right">
                    {{rating}} Ã©toiles
                </div>
            </div>

            <hr>

            <div class="row">
                {{comment_text}}
            </div>
        </div>
    </div>
</div>
{{/each}}

